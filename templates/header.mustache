{{!
    Page header.
}}

<header role="banner" class="pos-f-t brand-banner hidden-sm-down">
    <a href="{{{ config.wwwroot }}}" class="left-logo">
        <img src="{{output.get_logo_url}}" alt="{{sitename}}">
    </a>
    <a href="http://www.unamur.be" class="right-logo">
        <img src="{{output.get_compact_logo_url}}" alt="UNamur">
    </a>
</header>
<header role="banner" class="pos-f-t {{#displaybrandbanner}}pos-f-t-lower{{/displaybrandbanner}} navbar navbar-full navbar-dark bg-faded navbar-static-top moodle-has-zindex">

    <div class="container-fluid navbar-nav">
        {{#shownavdrawer}}
        <div data-region="drawer-toggle">
            <button aria-expanded="{{#navdraweropen}}true{{/navdraweropen}}{{^navdraweropen}}false{{/navdraweropen}}" aria-controls="nav-drawer" type="button" class="btn pull-xs-left m-r-1 btn-secondary" data-action="toggle-drawer" data-side="left" data-preference="drawer-open-nav"><span aria-hidden="true"><i class="fa fa-bars"></i></span><span class="sr-only">{{#str}}expand, core{{/str}}</span></button>
        </div>
        {{/shownavdrawer}}
        <a href="{{{ config.wwwroot }}}" class="navbar-brand navbar-sm-logo hidden-sm-up"></a>

        <!-- user_menu -->
        {{{ output.user_menu }}}

        <!-- navbar_plugin_output -->
        {{{ output.navbar_plugin_output }}}

        <!-- extra navbar buttons from receptic theme -->
        {{{ output.extra_navbar_buttons }}}

        <!-- search_box -->
        <span class="hidden-md-down">
            {{{ output.search_box }}}
        </span>
        <nav class="nav navbar-nav hidden-md-down">
{{{ output.text }}}
            <!-- custom_menu -->
            {{{ output.custom_menu }}}
            <!-- page_heading_menu -->
            {{{ output.page_heading_menu }}}
        </nav>
    </div>
</header>

