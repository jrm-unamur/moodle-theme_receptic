{{#displaymenu}}
<span class="dropdown nav-item">
    <a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown" aria-expanded="false">
        {{{menutitle}}}
    </a>
    <div class="dropdown-menu {{#multilevel}}multi-level{{/multilevel}}">
        {{#privatefiles}}
            <a class="dropdown-item" href="{{{filesurl}}}">
                {{{privatefilesitem}}}
            </a>
        {{/privatefiles}}
        {{#myevaluations}}
            <a class="dropdown-item" href="{{{myevaluationsurl}}}">
                {{{myevaluationsitem}}}
            </a>
        {{/myevaluations}}
        {{#multilevel}}
            <span class="dropdown dropdown-item dropdown-submenu nav-item">
                <a href="#" data-toggle="dropdown">
                    {{{evaluationssubmenutitle}}}
                </a>
                <div class="dropdown-menu">
                    {{#teachereval}}
                        <a class="dropdown-item" href="{{{myevaluationsurl}}}">
                            {{{teacherevaluationsitem}}}
                        </a>
                        <div class="dropdown-divider"></div>
                    {{/teachereval}}
                    <a class="dropdown-item" href="{{{resultsurl}}}">
                        {{{resultsitem}}}
                    </a>
                    <a class="dropdown-item" href="{{{participationurl}}}">
                        {{{participationitem}}}
                    </a>
                    {{#manage}}
                        <a class="dropdown-item" href="{{{manageurl}}}">
                            {{{manageitem}}}
                        </a>
                    {{/manage}}
                </div>
            </span>
        {{/multilevel}}
    </div>
</span>
{{/displaymenu}}