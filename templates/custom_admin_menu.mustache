{{!
    @template core/settings_link_page

    Displays the admin tree as a list of grouped links.

    Example context (json):
    {
        "node": {
            "text": "Root of menu",
            "key": "test0",
            "display": true,
            "children": [
                {
                    "text": "Child of menu",
                    "key": "test1",
                    "display": true,
                    "children": []
                }
            ]
        }
    }
}}
<span class="dropdown nav-item">
    <a class="dropdown-toggle nav-link" id="drop-down-{{uniqid}}" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
        <i class="fa fa-cog"></i> Admin
    </a>
    <div class="dropdown-menu multi-level shrinked" aria-labelledby="drop-down-{{uniqid}}">
        {{#node.children}}
            {{> theme_receptic/custom_admin_submenu }}
        {{/node.children}}
    </div>
</span>
