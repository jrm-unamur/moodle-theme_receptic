{{!
    @template core/settings_link_page_single

    Displays the admin tree as a list of grouped links.

    Example context (json):
    {
        "text": "Root of menu",
        "key": "test0",
        "display": true,
        "children": []
    }
}}
{{#children.count}}
    {{#display}}
        <span class="dropdown dropdown-item dropdown-submenu nav-item">
            <a data-toggle="dropdown" href="#">{{text}}</a>
            <div class="dropdown-menu">
                {{#children}}
                    {{#display}}
                        {{> theme_receptic/custom_admin_submenu }}
                    {{/display}}
                {{/children}}
            </div>
        </span>
    {{/display}}
{{/children.count}}
{{^children.count}}
    {{#display}}
        <a class="dropdown-item with-icon" href="{{{action}}}"><i class="fa fa-cog"></i> {{text}}</a>
    {{/display}}
{{/children.count}}
