{{!
    @template theme_receptic/coursewarnings

    Hints in course page giving information to teachers about special things (role is switched, course is invisible)

    Context variables (optional) for this template:
    * coursehidden
    * makevisiblesuccess
    * role
    * courseid
    * switchbackurl

    Example context (json):
    {
        "coursehidden": "true",
        "courseid": "5",
        "role": "Student",
        "switchbackurl": "url"
    }
}}
{{#coursehidden}}
<div class="course-hidden-infobox alert alert-warning">
    <i class="fa fa-exclamation-circle fa-3x fa-pull-left mr-3"></i>
    {{#str}} hiddencoursewarning, theme_receptic {{/str}} <br>
    <a href="#" data-action="makevisible" data-course-id="{{courseid}}">{{#str}} makecoursevisible, theme_receptic {{/str}}</a>
</div>
{{/coursehidden}}
{{#makevisiblesuccess}}
<div class="alert alert-success">
    <i class="fa fa-check-circle fa-3x fa-pull-left mr-3"></i>
    {{#str}} courseisnowvisible, theme_receptic {{/str}}
</div>
{{/makevisiblesuccess}}

{{#role}}
    <div class="switched-role-infobox alert alert-info">
        <i class="fa fa-user-circle fa-3x fa-pull-left mr-3"></i>
        <div>{{#str}}switchedroleto, theme_receptic{{/str}}
            <strong>{{role}}</strong>
        </div>
        <div>
            <a href="{{switchbackurl}}">{{#str}}switchrolereturn{{/str}}</a>
        </div>
    </div>
{{/role}}
