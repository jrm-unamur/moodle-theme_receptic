{{!
    @template block_myoverview/course-summary

    This template renders the course summary (view by courses) for the myoverview block.

    Example context (json):
    {
        "fullnamedisplay": "course 3",
        "viewurl": "https://www.google.com",
        "summary": "It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
    }
}}
<div class="course-info-container" id="course-info-container-{{id}}">
    <div class="row">
        <div class="col-xs-11">
            <div class="hidden-sm-up hidden-tablet hidden-phone">
                <h4 class="h5"><a {{^visible}}class="dimmed"{{/visible}} href="{{viewurl}}">{{{shortname}}} - {{{fullname}}}</a></h4>
            </div>
            <div class="hidden-sm-down hidden-tablet hidden-desktop">
                <h4 class="h5"><a {{^visible}}class="dimmed"{{/visible}} href="{{viewurl}}">{{{shortname}}} - {{{fullname}}}</a></h4>
            </div>
            <div class="hidden-xs-down hidden-md-up visible-tablet">
                <h4 class="h5"><a {{^visible}}class="dimmed"{{/visible}} href="{{viewurl}}">{{{shortname}}} - {{{fullname}}}</a></h4>
            </div>
        </div>
        <div class="col-xs-1 mdl-right">
            <a href="{{unenrolurl}}">
                <i title="{{#str}}unenrolme, theme_receptic{{/str}}" style="font-size:large;" class="fa fa-sign-out"></i>
            </a>
        </div>
    </div>
</div>
