{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview hidden" data-region="myoverview">
    <div class="content-centred">
        {{# cancreatecourse}}
            {{> block_myoverview/add_course_button }}
        {{/cancreatecourse}}
        {{# noestudent}}
            {{> block_myoverview/enrolme_button }}
        {{/noestudent}}
        {{#coursesview}}
            {{> block_myoverview/courses-view }}
        {{/coursesview}}
    </div>
</div>
