{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block (override).

    Example context (json):
    {
        "nocoursesimg" : https://moodle-test.test.fundp.ac.be/moodle37/theme/image.php/receptic/block_myoverview/1560420557/courses
        "grouping" : "all",
        "sort" : "fullname",
        "view" : "cards",
        "paging" : 12,
        "displaycategories" : "on",
        "list" : 1,
        "title" : 1,
        "all" : 1
        "urls" : {
            "addcourse" : "{url object}",
            "enrolme" : "{url object}"
        },
    
        "cancreatecourse" : 1,
        "allowcoursefiltering" : 1,
        "coursefilterall" : 1,
        "coursefilterinprogress" : 1,
        "coursefilterfuture" : 1,
        "coursefilterpast" : 1,
        "coursefilterstarred" : 1,
        "coursefilterhidden" : 0,
        "hasperiodfilter" : 1,
        "allowcoursesorting" : 1,
        "allowdisplaymode" : 1
    }
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview block-cards" data-region="myoverview" role="navigation">
    {{# cancreatecourse}}
        {{> block_myoverview/add_course_button }}
    {{/cancreatecourse}}
    {{# noestudent}}
        {{> block_myoverview/enrolme_button }}
    {{/noestudent}}
    <div data-region="filter" class="d-flex align-items-center flex-wrap" aria-label="{{#str}} aria:controls, block_myoverview {{/str}}">
        {{> block_myoverview/nav-grouping-selector }}

        {{> block_myoverview/nav-sort-selector }}

        {{> block_myoverview/nav-display-selector }}
    </div>

    <div class="container-fluid p-0">
        {{> block_myoverview/courses-view }}
    </div>
</div>
{{#js}}
require(
[
    'jquery',
    'theme_receptic/main',
],
function(
    $,
    Main
) {
    var root = $('#block-myoverview-{{uniqid}}');
    Main.init(root);
});
{{/js}}
