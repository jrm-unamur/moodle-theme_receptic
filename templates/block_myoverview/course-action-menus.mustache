{{!
    @template block_myoverview/course-action-menus

    This template renders action menu for each course.

    Example context (json):
    {
        "isfavourite": true
    }
}}
<div class="ml-auto dropdown">
    <button class="btn btn-link btn-icon icon-size-3 coursemenubtn"
        type="button"
        data-toggle="dropdown"
        aria-haspopup="true"
        aria-expanded="false">
        {{#pix}} i/moremenu, core {{/pix}}
            <span class="sr-only">
                {{#str}} aria:courseactions, block_myoverview {{/str}} {{{fullname}}}
            </span>
    </button>
    <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item {{#isfavourite}}hidden{{/isfavourite}}" href="#"
            data-action="add-favourite"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            >
            <span class="text-primary">{{#pix}} i/star, core, {{#str}} addtofavourites, block_myoverview {{/str}} {{/pix}}</span>
            {{#str}} addtofavourites, block_myoverview {{/str}}
            <div class="sr-only">
                {{#str}} aria:addtofavourites, block_myoverview {{/str}} {{{fullname}}}
            </div>
        </a>
        <a class="dropdown-item {{^isfavourite}}hidden{{/isfavourite}}" href="#"
            data-action="remove-favourite"
            data-course-id="{{id}}"
            aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
            >
            <span class="text-primary">{{#pix}} t/block, core, {{#str}} removefromfavourites, block_myoverview {{/str}} {{/pix}}</span>
            {{#str}} removefromfavourites, block_myoverview {{/str}}
            <div class="sr-only">
                {{#str}} aria:removefromfavourites, block_myoverview {{/str}} {{{fullname}}}
            </div>
        </a>
        {{#allowtogglevisibility}}
            <a class="dropdown-item {{^visible}}hidden{{/visible}}" href="#"
                data-action="makeinvisible-course"
                data-course-id="{{id}}"
                aria-controls="invisible-icon-{{ id }}-{{ uniqid }}"
                >
                {{#pix}} i/show, core, {{#str}} makeinvisible, theme_receptic {{/str}} {{/pix}}
                {{#str}} makeinvisible, theme_receptic {{/str}}
            </a>
            <div class="sr-only">
                {{#str}} makeinvisible, theme_receptic {{/str}}
            </div>


            <a class="dropdown-item {{#visible}}hidden{{/visible}}" href="#"
               data-action="makevisible-course"
               data-course-id="{{id}}"
               aria-controls="visible-icon-{{ id }}-{{ uniqid }}">
                {{#pix}} i/hide, core, {{#str}} makevisible, block_myoverview {{/str}} {{/pix}}
                {{#str}} makevisible, theme_receptic {{/str}}
            </a>
            <div class="sr-only">
                {{#str}} makevisible, theme_receptic {{/str}}
            </div>
        {{/allowtogglevisibility}}
        {{#allowremovecoursesfromdisplay}}
        <a class="dropdown-item {{^hidden}}hidden{{/hidden}}" href="#"
           data-action="show-course"
           data-course-id="{{id}}"
           aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
        >
            {{#str}} show, block_myoverview {{/str}}
            <div class="sr-only">
                {{#str}} aria:showcourse, block_myoverview, {{fullname}} {{/str}}
            </div>
        </a>
        <a class="dropdown-item {{#hidden}}hidden{{/hidden}}" href="#"
           data-action="hide-course"
           data-course-id="{{id}}"
           aria-controls="favorite-icon-{{ id }}-{{ uniqid }}"
        >
            {{#str}} hidecourse, block_myoverview {{/str}}
            <div class="sr-only">
                {{#str}} aria:hidecourse, block_myoverview, {{fullname}} {{/str}}
            </div>
        </a>
        {{/allowremovecoursesfromdisplay}}
        {{#enrolid}}
            <a class="dropdown-item" href="#"
               data-action="unenrolme"
               data-enrol-id="{{enrolid}}"
               data-course-id="{{id}}"
               aria-controls="visible-icon-{{ id }}-{{ uniqid }}">
                {{#pix}} a/logout, core, {{#str}} unenrolme, theme_receptic {{/str}} {{/pix}}
                {{#str}} unenrolme, theme_receptic {{/str}}
            </a>
            <div class="sr-only">
                {{#str}} unenrolme, theme_receptic {{/str}}
            </div>
        {{/enrolid}}
    </div>
</div>